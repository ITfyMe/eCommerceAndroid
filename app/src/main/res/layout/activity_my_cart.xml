<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    tools:context=".activity.MyCartActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar_sub">
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ty">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/toolbar"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cartList"
                    android:layout_width="match_parent"
                    android:layout_height="590dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="65dp"
                    android:overScrollMode="never"
                    android:padding="2dp">
                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartEmpty"
                    android:text="youcart is empty"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:layout_below="@id/txtCartEmpty"
                    android:gravity="center"
                    android:id="@+id/txtClickHere"
                    android:text="click here"/>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/re"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ty"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/re"
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Total Cost"
            android:textAlignment="center"
            android:textColor="#121e31"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPrice"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingBottom="1dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="17sp" />



        <Button

            android:layout_marginTop="5dp"
            android:id="@+id/btncontinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"

            android:fontFamily="@font/roboto_regular"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            style="?attr/materialButtonOutlinedStyle"
            />
    </RelativeLayout>

</RelativeLayout>